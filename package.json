  "license": "ISC",
  "dependencies": {
    "dotenv": "^7.0.0",
    "hapi": "^18.1.0",
    "hapi-pino": "^5.4.1",
    "joi": "^14.3.1",
    "lodash.assignin": "^4.2.0",
    "lodash.find": "^4.6.0"
  },
  "nodemonConfig": {
    "delay": "2500"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^5.15.3",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4"
