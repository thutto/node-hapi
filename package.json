{
  "name": "node-hapi-rest",
  "version": "1.0.0",
  "description": "This is a simple exploratory hapi js REST Service.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/app.js",
    "pretty": "prettier --write --tab-width 4 \"src/**/*.js\"",
    "test": "jest",
    "precommit": "lint-staged && npm test"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "git add"
    ]
  },
